generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  FARMER
  RESTAURANT
  ADMIN
  FOOD_BUNDLE
}

model User {
  id        Int       @id @default(autoincrement())
  role      Role
  email     String?   @unique
  phone     String?   @unique
  password  String?   
  createdAt DateTime  @default(now())

  farmer     Farmer?      @relation(fields: [farmerId], references: [id])
  farmerId   Int? @unique

  restaurant Restaurant?  @relation(fields: [restaurantId], references: [id])
  restaurantId Int? @unique

}

model Farmer {
  id          Int      @id @default(autoincrement())
  location    String
  submissions FarmerSubmission[]
  user        User?
  createdAt   DateTime @default(now())
}

model Restaurant {
  id         Int        @id @default(autoincrement())
  name       String
  location   String
  orders     Order[]
  posSales   POSSale[]
  user       User?
  createdAt  DateTime   @default(now())
}

model FarmerSubmission {
  id           Int       @id @default(autoincrement())
  farmer       Farmer    @relation(fields: [farmerId], references: [id])
  farmerId     Int
  productName  String   
  quantity     Float
  submittedAt  DateTime  @default(now())
}


model Product {
  id            Int           @id @default(autoincrement())
  name          String
  category      String
  unitPrice     Float
  unit          String
  stockQuantity Float
  orderItems    OrderItem[]
  createdAt     DateTime @default(now())
}

model Order {
  id            Int        @id @default(autoincrement())
  restaurant    Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId  Int
  status        String
  totalAmount   Float
  orderItems    OrderItem[]
  createdAt     DateTime   @default(now())
}

model OrderItem {
  id           Int     @id @default(autoincrement())
  order        Order   @relation(fields: [orderId], references: [id])
  orderId      Int
  product      Product @relation(fields: [productId], references: [id])
  productId    Int
  quantity     Float
  pricePerUnit Float
}

model POSSale {
  id           Int        @id @default(autoincrement())
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
  totalAmount  Float
  paymentMethod String
  createdAt    DateTime   @default(now())
}
